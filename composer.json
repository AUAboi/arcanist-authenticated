{
    "name": "ksassnowski/arcanist",
    "description": "A package to take the pain out of building multi-step form wizards in Laravel.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Kai Sassnowski",
            "email": "me@kai-sassnowski.com"
        }
    ],
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "require": {
        "php": "^8.0",
        "laravel/framework": "^8.0",
        "facade/ignition-contracts": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "orchestra/testbench": "^6.17",
        "mockery/mockery": "^1.4.3",
        "nunomaduro/collision": "^5.3",
        "spatie/phpunit-watcher": "^1.23"
    },
    "autoload": {
        "psr-4": {
            "Sassnowski\\Arcanist\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Sassnowski\\Arcanist\\ArcanistServiceProvider"
            ]
        }
    },
    "prefer-stable": true,
    "minimum-stability": "dev"
}
